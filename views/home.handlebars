<h1>Suas notas:</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">title</th>
            <th scope="col">action</th>
        </tr>
    </thead>
    <tbody>
        {{#each notes}}
        <tr>
            <td scope="row">{{@index}}</td>
            <td class="title-column"><a href="notes/{{this._id}}">{{this.title}}</a></td>
            <td class="actions-column">
                <a href="notes/edit/{{this._id}}" class="btn btn-primary">Editar</a>
                <form action="notes/delete" method="POST">
                    <input type="hidden" name="{{this._id}}">
                    <input type="submit" class="btn btn-danger" value="Remover">
                </form>
            </td>
        </tr>
        {{else}}
            <p>NÃ£o a notas no sistema ainda. <a href="notes"> Clique aqui para adicionar!</a></p>
        {{/each}}
    </tbody>
</table>